<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/button14"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/background"
            android:onClick="bestaetigen"
            android:text="OK" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button14"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Name eingeben"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2"
            android:layout_marginTop="37dp"
            android:text="Kein Name vorhanden" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="50dp"

            android:layout_alignStart="@+id/editText10"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="107dp"
            android:background="@drawable/background"
            android:onClick="setRundenzahl"
            android:text="Mitspieleranzahl ändern" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button3"
            android:layout_marginStart="12dp"
            android:ems="10"
            android:hint="Mitspieleranzahl eingeben"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText10"
            android:layout_below="@+id/editText10"
            android:layout_marginTop="14dp"
            android:text="Noch keine Spieleranzahl ausgewählt" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>